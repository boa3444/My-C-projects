#include <stdio.h>
struct Employee {
    char name[50];
    float pay;
    float dar;
    float gross;
};

int main() {
    struct Employee employees[10];

    for ( int i = 0 ; i < 10 ; i++)
    {
    	scanf("%s" , employees[i].name);
    	scanf("%f" , &employees[i].pay);
    	employees[i].da = 0.52 * employees[i].pay;
    	employees[i].gross = employees[i].da + employees[i].pay;
    }
    
    for (int i = 0; i < 10; i++) {
        printf("Employee %d: Name = %s, Pay = %.2f\n", i + 1, employees[i].name,employees[i].gross);
    }

    return 0;
}



